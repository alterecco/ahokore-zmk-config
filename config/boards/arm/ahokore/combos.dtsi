compatible = "zmk,combos";

#define COMBO(NAME, BINDINGS, KEYPOS, LAYERS) \
  combo_##NAME { \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    layers = <LAYERS>; \
  };

COMBO(undo, &kp LG(Z), 20 21, DEF)
COMBO(redo, &kp LG(LS(Z)), 20 10, DEF)
COMBO(cut, &kp LG(X), 20 22, DEF)
COMBO(copy, &kp LG(C), 21 22, DEF)
COMBO(paste, &kp LG(V), 22 23, DEF)
COMBO(select_all, &kp LG(A), 20 23, DEF)
