#include "hold_tap.dtsi"

morph_colon_pipe: morph_colon_pipe {
  compatible = "zmk,behavior-mod-morph";
  label = "MORPH_COLON_PIPE";
  #binding-cells = <0>;
  bindings = <&kp COLON>, <&kp PIPE>;
  mods = <(MOD_LSFT|MOD_RSFT)>;
};

