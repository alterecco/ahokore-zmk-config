#define str(s) #s

#define MACRO(NAME, BINDINGS) \
  macro_##NAME: macro_##NAME { \
    compatible = "zmk,behavior-macro"; \
    label = str(NAME); \
    #binding-cells = <0>; \
    bindings = <BINDINGS>; \
  };


macro_pm: macro_pm {
   compatible = "zmk,behavior-macro";
   label = "macro_pm";
   #binding-cells = <0>;
   bindings = <&kp P>, <&kp L>;
 };
